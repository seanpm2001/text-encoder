{
    "name": "simplepie/text-encoder",
    "description": "Modern character encoding detection and conversion using Intl and ICU.",
    "keywords": ["php", "simplepie", "character", "encoding", "set", "utf-8"],
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Ryan Parman",
            "homepage": "http://ryanparman.com"
        }
    ],
    "support": {
        "issues": "https://github.com/simplepie/text-encoder/issues"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-SPL": "*",
        "lib-ICU": "*",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "codeclimate/php-test-reporter": "*@dev",
        "friendsofphp/php-cs-fixer": "^2.10",
        "mamuz/php-dependency-analysis": "^1.3",
        "monolog/monolog": "^1.23",
        "pdepend/pdepend": "^2.5",
        "php-coveralls/php-coveralls": "^2.0",
        "phploc/phploc": "^4.0",
        "phpmetrics/phpmetrics": "^2.2",
        "phpunit/phpunit": "^7.0",
        "sebastian/phpcpd": "^4.0",
        "skyzyx/utility-pack": "^1.1",
        "squizlabs/php_codesniffer": "dev-master",
        "wapmorgan/php-code-analyzer": "^1.0"
    },
    "config": {
        "bin-dir": "bin/",
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "TextEncoder\\": "src/",
            "TextEncoder\\Test\\": "tests/"
        }
    }
}
